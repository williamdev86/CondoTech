<!-- Script para o gráfico de condomínios -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        <% if (usuario && usuario.nivel === 'Admin' && typeof estatisticasCondominios !== 'undefined') { %>
        try {
            // Serialização segura dos dados para o JavaScript
            const estatisticasCondominios = JSON.parse('<%= JSON.stringify(estatisticasCondominios || {}) %>'.replace(/&quot;/g, '"'));
            
            // Agora podemos acessar as propriedades com segurança
            const condominioPorStatus = {
                ativos: estatisticasCondominios.ativos || 0,
                inativos: estatisticasCondominios.inativos || 0,
                prospectos: estatisticasCondominios.prospectos || 0,
                implementacao: estatisticasCondominios.implementacao || 0,
                abrePortas: estatisticasCondominios.abrePortas || 0,
                agendados: estatisticasCondominios.agendados || 0
            };
            
            // Criar gráfico
            const ctx = document.getElementById('condominiosChart').getContext('2d');
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Ativos', 'Inativos', 'Prospectos', 'Implementação', 'Abre Portas', 'Agendado Visita'],
                    datasets: [{
                        data: [
                            condominioPorStatus.ativos,
                            condominioPorStatus.inativos,
                            condominioPorStatus.prospectos,
                            condominioPorStatus.implementacao,
                            condominioPorStatus.abrePortas,
                            condominioPorStatus.agendados
                        ],
                        backgroundColor: [
                            '#28a745', // verde - ativo
                            '#dc3545', // vermelho - inativo
                            '#ffc107', // amarelo - prospecto
                            '#17a2b8', // azul claro - implementação
                            '#007bff', // azul - abre portas
                            '#6c757d'  // cinza - agendado
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        } catch (e) {
            console.error('Erro ao inicializar o gráfico:', e);
        }
        <% } %>
    });
</script>