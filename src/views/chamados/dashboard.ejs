                <h3 class="mb-0"><%= (typeof estatisticas !== 'undefined' && estatisticas) ? estatisticas.total : 0 %></h3>
            </div>
        </div>
    </div>
    
    <div class="col-md-2 mb-4">
        <div class="card text-white bg-danger">
            <div class="card-body text-center">
                <h5 class="card-title">Abertos</h5>
                <h3 class="mb-0"><%= (typeof estatisticas !== 'undefined' && estatisticas) ? estatisticas.abertos : 0 %></h3>
            </div>
        </div>
    </div>
    
    <div class="col-md-2 mb-4">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <h5 class="card-title">Em Andamento</h5>
                <h3 class="mb-0"><%= (typeof estatisticas !== 'undefined' && estatisticas) ? estatisticas.emAndamento : 0 %></h3>
            </div>
        </div>
    </div>
    
    <div class="col-md-2 mb-4">
        <div class="card text-dark bg-info">
            <div class="card-body text-center">
                <h5 class="card-title">Aguardando</h5>
                <h3 class="mb-0"><%= (typeof estatisticas !== 'undefined' && estatisticas) ? estatisticas.aguardandoCliente : 0 %></h3>
            </div>
        </div>
    </div>
    
    <div class="col-md-2 mb-4">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h5 class="card-title">Resolvidos</h5>
                <h3 class="mb-0"><%= (typeof estatisticas !== 'undefined' && estatisticas) ? estatisticas.resolvidos : 0 %></h3>
            </div>
        </div>
    </div>
    
    <div class="col-md-2 mb-4">
        <div class="card text-white bg-secondary">
            <div class="card-body text-center">
                <h5 class="card-title">Cancelados</h5>
                <h3 class="mb-0"><%= (typeof estatisticas !== 'undefined' && estatisticas) ? estatisticas.cancelados : 0 %></h3>
            </div>
        </div>
    </div>
</div>

<!-- Chamados recentes -->
<div class="row mb-5">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Chamados Recentes</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Data</th>
                                <th>Cliente</th>
                                <th>Condomínio</th>
                                <th>Tipo</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof ultimosChamados !== 'undefined' && ultimosChamados && ultimosChamados.length > 0) { %>
                                <% ultimosChamados.forEach(chamado => { %>
                                    <tr>
                                        <td><%= chamado.id %></td>
                                        <td><%= chamado.data_abertura.toLocaleDateString('pt-BR') %></td>
                                        <td><%= chamado.cliente_chamado.nome %></td>
                                        <td><%= chamado.cliente_chamado.condominio_cliente.nome %></td>
                                        <td><%= chamado.tipo %></td>
                                        <td>
                                            <% if (chamado.status === 'Aberto') { %>
                                                <span class="badge bg-danger">Aberto</span>
                                            <% } else if (chamado.status === 'Em Andamento') { %>
                                                <span class="badge bg-warning text-dark">Em Andamento</span>
                                            <% } else if (chamado.status === 'Aguardando Cliente') { %>
                                                <span class="badge bg-info text-dark">Aguardando Cliente</span>
                                            <% } else if (chamado.status === 'Resolvido') { %>
                                                <span class="badge bg-success">Resolvido</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Cancelado</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/chamados/visualizar/<%= chamado.id %>" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center">Nenhum chamado encontrado</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

